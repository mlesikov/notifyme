<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

  <filter>
    <filter-name>guiceFilter</filter-name>
    <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>guiceFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>com.clouway.notifyme.server.NotifyMeGuiceServletConfig</listener-class>
  </listener>

  <!-- ConnectionService -->
  <servlet>
    <servlet-name>com.clouway.notifyme.NotifyMe ConnectionService</servlet-name>
    <servlet-class>com.clouway.notifyme.server.ConnectionServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.clouway.notifyme.NotifyMe ConnectionService</servlet-name>
    <url-pattern>/NotifyMe/ConnectionService</url-pattern>
  </servlet-mapping>

  <!-- SubscriptionService -->
  <servlet>
    <servlet-name>com.clouway.notifyme.NotifyMe SubscriptionService</servlet-name>
    <servlet-class>com.clouway.notifyme.server.SubscriptionServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.clouway.notifyme.NotifyMe SubscriptionService</servlet-name>
    <url-pattern>/NotifyMe/SubscriptionService</url-pattern>
  </servlet-mapping>

</web-app>
